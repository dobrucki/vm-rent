@{
    ViewBag.Title = "Register";
}
@model Application.WebApp.ViewModels.RegisterUserViewModel

<form asp-action="Register" asp-controller="Account" method="post" class="container-fluid mt-3 p-1 w-50">
    
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="PasswordConfirmed" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="PasswordConfirmed" class="form-control"/>
            <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>

</form> 