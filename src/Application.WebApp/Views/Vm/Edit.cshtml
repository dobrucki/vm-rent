@model Application.WebApp.ViewModels.EditVmViewModel

@{
    ViewBag.Title = "Edit vm";
}

<form asp-action="Edit" asp-controller="Vm" method="post" class="container-fluid mt-3 p-1 w-50">
    
    <input asp-for="Id" type="hidden" value="@Model.Id">

    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Comment))
    {
        <div class="form-group">
            <label asp-for="Comment" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Comment" class="form-control"/>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>

</form> 